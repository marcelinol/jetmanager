<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Clientes</h1>
</div>

<div class="col-md-10">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Embarcação</th>
        <th>Vencimento do Seguro</th>
      </tr>
    </thead>

    <tbody>
      <% @company.each do |company| %>
        <% @ship = company.ships.last %>
        <tr>
          <td><%= link_to company.name, company %></td>
          <% if @ship %>
            <td><%= link_to @ship.name, @ship  %></td>
            <td><%= @ship.insurance_due_date %>
          <% else %>
            <td></td><td></td>
          <% end %>
          <td><%= link_to 'Editar', edit_company_path(company) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<p>
  <button type="button" class="btn btn-default">
    <%= link_to 'Criar nova empresa', new_company_path %>
  </button>
</p>
