<p id="notice"><%= notice %></p>

<h1>Listing Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Registration number</th>
      <th>Insurance due date</th>
      <th>Registration due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.name %></td>
        <td><%= ship.kind %></td>
        <td><%= ship.registration_number %></td>
        <td><%= ship.insurance_due_date %></td>
        <td><%= ship.registration_due_date %></td>
        <td><%= link_to 'Show', ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

